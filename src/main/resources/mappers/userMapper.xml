	<mapper namespace="com.ssafy.fit.model.dao.IUserDao">

	<!--유저 조회-->
	<select id="selectUserAll" resultType="User">
		SELECT * FROM user;
	</select>

	<!--유저아아디로 유저 조회-->
	<select id="selectUserByUserId" parameterType="String"	resultType="User">
		SELECT * FROM user WHERE userId = #{userId}
	</select>

