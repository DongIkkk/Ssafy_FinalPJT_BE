	<!--유저 추가-->
	<insert id="insertUser" parameterType="User">
	INSERT INTO user (userId, password, userName, email, gender, age)
	 VALUES (#{userId},	#{password}, #{userName}, #{email}, #{gender}, #{age})
	</insert>

